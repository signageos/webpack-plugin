{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"target": "es5",
		"declaration": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"pretty": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"typeRoots": ["node_modules/@types/"],
		"lib": ["dom", "es5", "scripthost", "esnext"]
	},
	"include": ["src/**/*.ts"]
}
