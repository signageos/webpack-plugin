{
	"specials": ["mocha"],
	"parsers": {
		"**/*.ts": "typescript",
		"**/*.js": "es6"
	},
	"detectors": ["importDeclaration", "requireCallExpression"],
	"ignore-dirs": ["dist"],
	"ignores": [
		"@types/*",
		"@signageos/codestyle",
		"mocha",
		"depcheck",
		"prettier",
		"debug",
		"child-process-promise",
		"download",
		"fs-extra",
		"unzipper",
		"@eslint/eslintrc",
		"@eslint/js",
		"eslint",
		"eslint-config-prettier",
		"eslint-plugin-unused-imports",
		"prettier",
		"should",
		"typescript-eslint",
		"run-script-os"
	]
}
